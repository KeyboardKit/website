{%- if jekyll.environment == 'production' and site.google-analytics.measurement-id -%}
  {% assign id = site.analytics.measurement-id %}
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id={{id}}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{id}}');
  </script>
{%- endif -%}